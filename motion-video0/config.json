        "netcam_url": "str?",
        "netcam_userpass": "str?",
        "palette": "int?",
        "password": "str?",
        "picture_quality": "int?",
        "port": "port?",
        "rotate": "int?",
        "saturation": "int?",
        "still_image_url": "str?",
        "stream_quality": "int?",
        "text_scale": "int(1,10)?",
        "threshold": "int?",
        "threshold_percent": "int(0,100)?",
        "username": "str?",
        "userpass": "str?",
        "width": "int?",
        "w3w": [
          "str?",
          "str?",
          "str?"
