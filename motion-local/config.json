{
  "name": "Motion Video0",
  "version": "0.1.2",
  "slug": "motion-video0",
  "description": "Motion addon with support for /dev/video0 access",
  "url": "https://github.com/dcmartin/hassio-addons/tree/master/motion/README.md",
  "webui": "http://[HOST]:[PORT:7999]/",
  "startup": "application",
  "boot": "auto",
  "homeassistant": "0.92.0b2",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "ingress": true,
  "ingress_port": 7999,
  "devices": [
    "/dev/video0:/dev/video0:rwm"
  ],
  "audio": true,
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "homeassistant_api": true,
  "privileged": [
    "SYS_ADMIN"
  ],
  "timeout": 90,
  "tmpfs": "size=256m,uid=0,rw",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "panel_icon": "mdi:motion-sensor",
  "ports": {
    "7999/tcp": 7999,
    "8080/tcp": 8080,
    "8090/tcp": 8090
  },
  "ports_description": {
    "7999/tcp": "Web interface",
    "8080/tcp": "Motion interface",
    "8090/tcp": "Camera interface"
  },
  "options": {
    "log_level": "info",
    "log_motion_level": "info",
    "log_motion_type": "ALL",
    "default": {
      "brightness": 100,
      "changes": "on",
      "contrast": 50,
      "despeckle": "EedDl",
      "event_gap": 10,
      "framerate": 1,
      "framerate": 5,
      "height": 480,
      "hue": 50,
      "interval": 60,
      "lightswitch": 0,
      "minimum_motion_frames": 1,
      "movie_max": 60,
      "movie_output": "off",
      "movie_quality": 80,
      "netcam_userpass": "username:password",
      "palette": 15,
      "password": "password",
      "picture_quality": 80,
      "post_pictures": "best",
      "saturation": 0,
      "stream_quality": 50,
      "text_scale": 2,
      "threshold_percent": 1,
      "username": "username",
      "width": 640
    },
    "mqtt": {
      "host": "core-mosquitto",
      "port": "1883",
      "username": "username",
      "password": "password"
    },
    "group": "motion",
    "device": "motion-local",
    "client": "motion-local",
    "timezone": "GMT",
    "cameras": [
      {
        "name": "ps3eye",
        "type": "local",
        "device": "/dev/video0",
        "framerate": 5,
        "fov": 75,
        "width": 640,
        "height": 480,
        "rotate": 0,
        "picture_quality": 100,
        "stream_quality": 80,
        "threshold_percent": 5
      },
      {
        "name": "wyzecam",
        "type": "netcam",
        "icon": "camera",
        "width": 1920,
        "height": 1080,
        "netcam_url": "rtsp://192.168.1.223/live",
        "netcam_userpass": "wyzecamuser:wyzecampass",
        "framerate": 2,
        "threshold_percent": 2
      },
      {
        "name": "wcv80n",
        "type": "ftpd",
        "icon": "webcam",
        "netcam_url": "http://192.168.1.174/img/video.mjpeg",
        "netcam_userpass": "wcv80nuser:wcv80npass",
        "movie_max": 5,
        "framerate": 5
      },
      {
        "name": "rpi-v4l2",
        "type": "mqtt",
        "icon": "raspberry-pi",
        "width": 1280,
        "height": 720,
        "netcam_url": "http://192.168.1.93:8090/1",
        "netcam_userpass": "username:password"
      }
    ]
  },
  "schema": {
    "log_level": "str",
    "log_type": "str?",
    "log_motion": "int?",
