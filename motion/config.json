{
  "name": "Motion",
  "version": "0.8.63",
  "slug": "motion",
  "description": "Motion addon from LINUX package https://motion-project.github.io/",
  "url": "https://github.com/dcmartin/hassio-addons",
  "webui": "http://[HOST]:[PORT:7999]/",
  "startup": "application",
  "boot": "auto",
  "homeassistant": "0.92.0b2",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "ingress": true,
  "ingress_port": 7999,
  "devices": [
    "/dev/video0:/dev/video0:rwm"
  ],
  "audio": true,
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "homeassistant_api": true,
  "privileged": [
    "SYS_ADMIN"
  ],
  "timeout": 90,
  "tmpfs": "size=256m,uid=0,rw",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "panel_icon":"mdi:motion-sensor",
  "ports": {
    "7999/tcp": 7999,
    "8080/tcp": 8080,
    "8090/tcp": 8090
  },
  "ports_description": {
    "7999/tcp": "Web interface",
    "8080/tcp": "Motion interface",
    "8090/tcp": "Camera interface" 
  },
  "options": {
    "log_level": "info",
    "group": "motion",
    "post_pictures": "center",
    "default": {
      "brightness": 100,
      "contrast": 50,
      "event_gap": 10,
      "fov": 62,
      "fps": 5,
      "hue": 50,
      "lightswitch": 0,
      "palette": 15,
      "picture_quality": 100,
      "stream_quality": 100,
      "threshold": 5000,
      "saturation": 0,
      "userpass": "username:password",
      "username": "username",
      "password": "password",
      "height": 480,
      "width": 640
    },
    "cameras": [
      {
        "name": "netcam",
        "type": "wcv80n",
        "url": "http://192.168.1.174/img/video.mjpeg",
        "mjpeg_url": "http://127.0.0.1:8090/1",
        "picture_quality": 100,
        "stream_quality": 80,
        "threshold": 7500
      },
      {
        "name": "local",
        "device": "/dev/video0",
        "mjpeg_url": "http://127.0.0.1:8090/2",
        "type": "ps3eye",
        "fps": 5,
        "fov": 75,
        "width": 640,
        "height": 480,
        "rotate": 0,
        "picture_quality": 100,
        "stream_quality": 80,
        "threshold": 10000
      }
    ],
    "mqtt": {
      "host": "core-mosquitto",
      "port": "1883",
      "username": "username",
      "password": "password"
    },
    "cloudant": {
      "url": "http://localhost:5984",
      "username": "",
      "password": ""
    }
  },
  "schema": {
    "log_level": "str",
    "log_type": "str?",
    "log_motion": "int?",
    "log_file": "str?",
    "group": "str",
    "device": "str?",
    "username": "str?",
    "password": "str?",
    "timezone": "str?",
    "post_pictures": "match(first|last|best|most|center|on)",
    "default": {
      "brightness": "int?",
      "contrast": "int?",
      "event_gap": "int?",
      "pre_capture": "int?",
      "post_capture": "int?",
      "fov": "int?",
      "fps": "int?",
      "hue": "int?",
      "lightswitch": "int?",
      "palette": "int?",
      "picture_quality": "int?",
      "stream_quality": "int?",
      "threshold": "int?",
      "saturation": "int?",
      "userpass": "str?",
      "username": "str?",
      "password": "str?",
      "height": "int?",
      "width": "int?"
    },
    "cameras": [
      {
        "name": "str",
        "origin": "match(local|http|ftpd|mqtt)?",
        "type": "match(ps3eye|wcv80n|panasonic|kinect|rpiv2|generic)?",
        "icon": "str?",
        "device": "str?",
        "mac": "str?",
        "port": "port?",
        "rotate": "int?",
        "url": "str?",
        "mjpeg_url": "str?",
        "still_image_url": "str?",
        "brightness": "int?",
        "contrast": "int?",
        "event_gap": "int?",
        "fov": "int?",
        "fps": "int?",
        "hue": "int?",
        "lightswitch": "int?",
        "palette": "int?",
        "picture_quality": "int?",
        "stream_quality": "int?",
        "threshold": "int?",
        "saturation": "int?",
        "userpass": "str?",
        "username": "str?",
        "password": "str?",
        "height": "int?",
        "width": "int?"
      }
    ],
    "mqtt": {
      "host": "str?",
      "port": "port?",
      "username": "str?",
      "password": "str?"
    },
    "cloudant": {
      "url": "str?",
      "username": "str?",
      "password": "str?"
    },
    "reload": "str?"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
