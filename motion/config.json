{
  "name": "Motion",
  "url": "https://github.com/dcmartin/hassio-addons",
  "version": "0.8.29",
  "slug": "motion",
  "description": "Motion addon from LINUX package https://motion-project.github.io/",
  "startup": "before",
  "boot": "auto",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7"
  ],
  "audio": true,
  "devices": [ "/dev/video0:/dev/video0:rwm" ],
  "hassio_api": true,
  "homeassistant_api": true,
  "privileged": [
    "SYS_ADMIN"
  ],
  "webui": "http://[HOST]:[PORT:7999]/",
  "timeout": 90,
  "tmpfs": "size=256m,uid=0,rw",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "7999/tcp": 7999,
    "8000/tcp": 8000,
    "8080/tcp": 8080,
    "8090/tcp": 8090
  },
  "options": {
    "log_level": "info",
    "group": "motion",
    "post_pictures": "center",
    "cameras": [
      { "name": "sample-mjpeg", "url": "mjpeg://192.168.1.174/img/video.mjpeg" },
      {
        "name": "local",
        "device": "/dev/video0",
        "type": "ps3eye",
        "fps": 5,
        "fov": 75,
        "width": 640,
        "height": 480,
        "rotate": 0,
        "picture_quality": 100,
        "stream_quality": 80,
        "threshold": 5000
      }
    ],
    "mqtt": {
      "host": "core-mosquitto",
      "port": "1883",
      "username": "username",
      "password": "password"
    },
    "cloudant": {
      "url": "http://localhost:5984",
      "username": "",
      "password": ""
    }
  },
  "schema": {
    "log_level": "str",
    "log_type": "str?",
    "log_motion": "int?",
    "log_file": "str?",
    "group": "str",
    "device": "str?",
    "username": "str?",
    "password": "str?",
    "timezone": "str?",
    "post_pictures": "str?",
    "cameras": [
      {
        "name": "str",
        "url": "str?",
        "device": "str?",
        "palette": "int?",
        "mac": "str?",
        "type": "str?",
        "fov": "int?",
        "fps": "int?",
        "userpass": "str?",
        "port": "port?",
        "picture_quality": "int?",
        "stream_quality": "int?",
        "width": "int?",
        "height": "int?",
        "rotate": "int?",
        "threshold": "int?",
        "event_gap": "int?",
        "lightswitch": "int?",
        "hue": "int?",
        "brightness": "int?",
        "contrast": "int?",
        "saturation": "int?"
      }
    ],
    "mqtt": {
      "host": "str?",
      "port": "port?",
      "username": "str?",
      "password": "str?"
    },
    "cloudant": {
      "url": "str?",
      "username": "str?",
      "password": "str?"
    },
    "reload": "str?"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
